

{# squelette base...... #}
{% extends "base.html.twig" %}

{# def. du titre #}
{% block title %}Modification de la photo de profil{% endblock %}

{# remplissage du body de la page #}
{% block body %}

    {# grille bootstrap #}
    <div class="container-fluid">

        {# titre h1 de la page #}
        <div class="row">
            <div class="col-12">
                <h1 class="text-center my-5">Modification de la photo de profil</h1>
            </div>
        </div>

        {# lien retour #}
        <div class="row">
            <div class="col-12 text-center mb-4">

                <a href="{{ path('main-profil') }}" class = "text-decoration-none">Revenir a mon profil</a>

            </div>
        </div>

        {# affichage du formulaire #}
        <div class="row">
            <div class="col-12 col-md-8 mx-auto bg-black p-3">
                <div class="row">
                    <div class="col-12 col-md-6 mx-auto">
                     {{ form(edit_photo_form) }}
                    </div>
                </div>
            </div>
        </div>



    </div>
{% endblock %}
